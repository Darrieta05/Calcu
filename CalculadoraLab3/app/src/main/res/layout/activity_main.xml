<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.darri.calculadoralab3.MainActivity"
    android:orientation="vertical">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_weight="1"
            android:layout_gravity="center">
            <Button
                android:text="ADV"
                android:id="@+id/advcalc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:text="CLEAR"
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="match_parent"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_gravity="center">
            <Button
                android:text="7"
                android:id="@+id/siete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="8"
                android:id="@+id/ocho"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="9"
                android:id="@+id/nueve"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="/"
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_gravity="center">

            <Button
                android:text="4"
                android:id="@+id/cuatro"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"/>
            <Button
                android:text="5"
                android:id="@+id/cinco"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"/>
            <Button
                android:text="6"
                android:id="@+id/seis"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"/>
            <Button
                android:text="X"
                android:id="@+id/por"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_gravity="center">
            <Button
                android:text="1"
                android:id="@+id/uno"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="2"
                android:id="@+id/dos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="3"
                android:id="@+id/tres"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="-"
                android:id="@+id/menos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_gravity="center">

            <Button
                android:text="."
                android:id="@+id/punto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="0"
                android:id="@+id/cero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="="
                android:id="@+id/igual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:text="+"
                android:id="@+id/mas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
