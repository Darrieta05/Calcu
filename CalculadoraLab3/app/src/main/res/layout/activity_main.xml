<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.darri.calculadoralab3.MainActivity"
    android:orientation="vertical">


    <EditText

        android:hint="0"
        android:id="@+id/edit"
        android:textSize="24pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="20sp"
            android:text="Advanced Panel"
            android:id="@+id/advcalc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"/>

        <Button
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="20sp"
            android:text="CLEAR"
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:orientation="horizontal"
            android:weightSum="20"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <Button
                android:textSize="20sp"
                android:text="7"
                android:id="@+id/siete"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="20sp"
                android:text="8"
                android:id="@+id/ocho"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="20sp"
                android:text="9"
                android:id="@+id/nueve"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="20sp"
                android:text="/"
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:weightSum="20"
            android:layout_width="match_parent"
            android:layout_height="110dp">
            <Button
                android:textSize="20sp"
                android:text="4"
                android:id="@+id/cuatro"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="20sp"
                android:text="5"
                android:id="@+id/cinco"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="20sp"
                android:text="6"
                android:id="@+id/seis"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="20sp"
                android:text="X"
                android:id="@+id/por"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:weightSum="20"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:textSize="20sp"
                android:text="1"
                android:id="@+id/uno"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="20sp"
                android:text="2"
                android:id="@+id/dos"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="20sp"
                android:text="3"
                android:id="@+id/tres"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="40sp"
                android:text="-"
                android:id="@+id/menos"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:weightSum="20"
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <Button
                android:textSize="40sp"
                android:text="."
                android:id="@+id/punto"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="40sp"
                android:text="0"
                android:id="@+id/cero"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="40sp"
                android:text="="
                android:id="@+id/igual"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="40sp"
                android:text="+"
                android:id="@+id/mas"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
